<CustomDropDown>
	saveButton: save_Button
	Button:
		text: 'Load'
		size_hint_y: None
		height: '28dp'
		on_release: root.showLoad()
	Button:
		id: save_Button
		text: 'Save'
		size_hint_y: None
		height: '28dp'
		disabled: True
		on_release: root.showSave()
	Button:
		id: splitAudioFile_Button
		text: 'Split audio'
		size_hint_y: None
		height: '28dp'
		disabled: False
		on_release: root.showSplitAudioFile()
	Button:
		id: shareAudioFile_Button
		text: 'Share audio'
		size_hint_y: None
		height: '28dp'
		disabled: False
		on_release: root.shareAudio()
	Button:
		text: "Settings"
		size_hint_y: None
		height: '28dp'
		on_press: app.open_settings()
	Button:
		text: 'Help'
		size_hint_y: None
		height: '28dp'
		on_release: root.help()