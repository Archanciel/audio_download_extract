<CustomDropDown>
	gridLayoutClip: gridlayout_clipButton
	gridLayoutShare: gridlayout_shareButton
	gridLayoutSettings: gridlayout_settingsButton
	gridLayoutDelete: gridlayout_deleteButton
	saveButton: save_Button

    # defining canvas causes disabled drop down menu items to be
    # low grayed instead of being transparent !
    canvas.before:
        Color:
            rgb: [0.22,0.22,0.22]
        Rectangle:
            pos: self.pos
            size: self.size

	Button:
		text: 'Load'
		size_hint_y: None
		height: '28dp'
		on_release: root.showLoad()
	Button:
		id: save_Button
		text: 'Save'
		size_hint_y: None
		height: '28dp'
		disabled: True
		on_release: root.showSave()
    GridLayout: # enable to hide or display 'Delete' menu item
        id: gridlayout_deleteButton
		cols: 1
        size_hint_y: None
        height: "0dp"
        Button:
            id: delete_Button
            text: 'Delete'
            size_hint_y: None
            height: '28dp'
            on_release: root.showDelete()
    GridLayout: # enable to hide or display 'Clip audio' menu item
        id: gridlayout_clipButton
		cols: 1
        size_hint_y: None
        height: "0dp"
        Button:
            text: 'Clip audio'
            size_hint_y: None
            height: '28dp'
            disabled: False
            on_release: root.showClipAudioFile()
    GridLayout: # enable to hide or display 'Share audio' menu item
        id: gridlayout_shareButton
		cols: 1
        size_hint_y: None
        height: "0dp"
        Button:
            id: shareAudioFile_Button
            text: 'Share audio'
            size_hint_y: None
            height: '28dp'
            disabled: False
            on_release: root.shareAudio()
    Button:
        text: 'Down histo'
        size_hint_y: None
        height: '28dp'
        disabled: False
        on_release: root.downloadHisto()
    Button:
        text: 'Del histo'
        size_hint_y: None
        height: '28dp'
        disabled: False
        on_release: root.downloadHistoDel()
    GridLayout: # enable to hide or display 'Settings' menu item
        id: gridlayout_settingsButton
		cols: 1
        size_hint_y: None
        height: "0dp"
        Button:
            text: "Settings"
            size_hint_y: None
            height: '28dp'
            on_press: app.open_settings()
	Button:
		text: 'Help'
		size_hint_y: None
		height: '28dp'
		on_release: root.help()