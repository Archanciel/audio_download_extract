# ---------- audiosplittergui.kv  ----------

<AudioSplitterGUI>: # sub-class of Screen
	name: "audioSplitterScreen"
	sourceAudioFilePathName: source_file_path_name
	audioSlider: slider
	playButton: button_play
	startTextInput: text_input_start
	currentTextInput: text_input_current
	endTextInput: text_input_end
	splitAudioFilePathName: split_file_path_name
	outputLabel: label_output_split
	GridLayout
		cols: 1
		GridLayout:
			cols: 1
			rows: 5
			GridLayout:
				cols: 1
				rows: 2
				size_hint: (1, 0.13)
				Label:
					size_hint: (None, 0.03)
					valign: 'bottom'
					text: '  Source file name'
				TextInput:
					id: source_file_path_name
					size_hint_y: 0.05
					halign: 'left'
					multiline: False
					readonly: True
					text: ''
			GridLayout:
				cols: 3
				size_hint: (1, 0.6)
				GridLayout:
					cols: 1
					size_hint: (0.2, 0.4)
				GridLayout:
					cols: 1
					rows: 1
					size_hint: (0.4, 0.4)
					GridLayout:
						cols: 1
						rows: 4
						size_hint: (0.4, 0.4)
						GridLayout:
							cols: 3
							rows: 2
							size_hint: (0.4, 1)
							Label:
								size_hint_y: 0.01
								valign: 'bottom'
								text: 'Start'
							Label:
								size_hint_y: 0.01
								valign: 'bottom'
								text: 'Current'
							Label:
								size_hint_y: 0.01
								valign: 'bottom'
								text: 'End'
							TextInput:
							    id: text_input_start
								size_hint_y: 0.01
								halign: 'right'
							TextInput:
							    id: text_input_current
								size_hint_y: 0.01
								halign: 'right'
								readonly: True
							TextInput:
							    id: text_input_end
								size_hint_y: 0.01
								halign: 'right'
						GridLayout:
							cols: 2
							rows: 1
							size_hint: (0.6, 0.5)
							GridLayout:
								size_hint_y: 0.15
								cols: 3
								Button:
									text: '<|'
									on_press: root.goToStartPos()
								Button:
									text: '<<'
									on_press: root.backwardThirtySeconds()
								Button:
									text: '<'
									on_press: root.backwardTenSeconds()
							GridLayout:
								cols: 3
								size_hint_y: 0.15
								Button:
									text: '>'
									on_press: root.forwardTenSeconds()
								Button:
									text: '>>'
									on_press: root.forwardThirtySeconds()
								Button:
									text: '|>'
									on_press: root.goToEndPos()
						GridLayout:
							cols: 1
							rows: 2
							size_hint_y: 1.2
							Slider:
								id: slider
								min: 0
								max: 1
								step: 1
								value: 0
								on_value: root.updateSoundPos(self.value)
							GridLayout:
								cols: 4
								rows: 1
								GridLayout:
									cols: 1
								Button:
								    id: button_play
									text: 'Play'
									on_press: root.playAudioFile()
								Button:
									text: 'Stop'
									on_press: root.stopAudioFile()
								GridLayout: # empty GridLayout
									cols: 1

				GridLayout: # empty GridLayout
					cols: 1
					size_hint: (0.2, 0.4)
			GridLayout:
				cols: 1
				rows: 2
				size_hint: (1, 0.17)
				Label:
					size_hint: (None, 0.02)
					valign: 'bottom'
					text: 'Split file name'
				TextInput:
				    id: split_file_path_name
					size_hint_y: 0.02
					halign: 'left'
			GridLayout:
			    cols: 1
			    rows: 1
				size_hint_y: 0.5
                ScrollView:
                    id: scrlv_out
                    canvas.before:
                        Color:
                            rgb: [0,0,0]
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    effect_cls: "ScrollEffect" #prevents overscrolling
                    #scroll_y: 0 # forces scrolling to bottom after adding text. Works only on TextInput, not on Label !!!
                    do_scroll_x: False # limiting to vertical scrolling

                    Label:
                        id: label_output_split
                        size_hint_y: None
                        height: self.texture_size[1]
                        text_size: (self.width-20), None
                        line_height: 0.9
                        background_color: 0,0,0,0
                        foreground_color: 1,1,1,1
                        valign: "top"
                        markup: True
			BoxLayout:
				size_hint_y: 0.2
				Button:
					text: 'Save'
					on_release: root.createSplitFile()
				Button:
					text: 'Cancel'
					on_release:
						root.cancelSplitFile()
						app.root.current = "audioDownloaderScreen"
						root.manager.transition.direction = "right"
